{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",

    "strict": true,
    "noImplicitAny": false,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "types": ["node", "express"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
